generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(uuid())
  email          String   @unique
  nome           String
  dataNascimento DateTime
  role           Role
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  corretor Corretor?
  cliente  Cliente?
}

model Corretor {
  id              String    @id @default(uuid())
  userId          String    @unique
  user            User      @relation(fields: [userId], references: [id])
  creci           String    @unique
  cpf             String    @unique
  foto            String?
  statusCreci     Boolean
  estado          String
  cidade          String
  dataVerificacao DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model Cliente {
  id        String   @id @default(uuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])
  foto      String?
  estado    String
  cidade    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  CLIENTE
  CORRETOR
  ADMIN
}
